						{src: "", member: "Anne Hathaway", prof: "CEO / Marketing Guru"},
						{src: "", member: "Anne Hathaway", prof: "CEO / Marketing Guru"}
					];

				ul.team__list.owl-carousel
					each item in items
						li.team__item
							figure
								.team__img-wrap
									img.team__img(src=" " + item.src)
								figcapture
									.team__member #{item.member}
									.team__prof #{item.prof}